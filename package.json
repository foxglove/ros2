{
  "name": "@foxglove/ros2",
  "version": "3.1.0",
  "description": "Standalone TypeScript implementation of the ROS 2 protocol built on @foxglove/rtps",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/foxglove/ros2.git"
  },
  "author": {
    "name": "Foxglove",
    "email": "contact@foxglove.dev",
    "url": "https://foxglove.dev/"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "nodejs.d.ts",
    "nodejs.js"
  ],
  "scripts": {
    "build": "yarn clean && tsc -b",
    "clean": "rimraf dist *.tsbuildinfo",
    "lint:ci": "eslint --report-unused-disable-directives .",
    "lint": "eslint --report-unused-disable-directives --fix .",
    "prepack": "yarn build",
    "prepublishOnly": "yarn lint:ci && yarn test",
    "test": "jest",
    "examples:listener": "node -r esbuild-runner/register examples/listener.ts"
  },
  "engines": {
    "node": ">= 14"
  },
  "dependencies": {
    "@foxglove/rosmsg": "^2.0.0 || ^3.0.0",
    "@foxglove/rosmsg2-serialization": "^1.0.5",
    "@foxglove/rtps": "^1.4.0",
    "eventemitter3": "^4.0.7"
  },
  "devDependencies": {
    "@foxglove/eslint-plugin": "0.18.0",
    "@foxglove/rosmsg-msgs-common": "^1.0.3",
    "@foxglove/tsconfig": "1.1.0",
    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.12.0",
    "esbuild": "0.14.11",
    "esbuild-runner": "2.2.1",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-es": "4.1.0",
    "eslint-plugin-filenames": "1.3.2",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "25.3.4",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.4.7",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.4"
  }
}
